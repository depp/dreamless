<?xml version="1.0" encoding="UTF-8"?>
<build>
  <key name="name">Dreamless</key>
  <key name="email">depp@zdome.net</key>
  <key name="url">http://www.moria.us/</key>
  <key name="copyright">Copyright Â© 2014 Dietrich Epp</key>
  <key name="version">0.1</key>
  <key name="identifier">us.moria.dreamless</key>

  <key name="cvar.log.level.root">debug</key>
  <if value="$os == windows">
    <key name="cvar.log.winconsole">yes</key>
  </if>
  <key name="cvar.path.data"><path path="data"/></key>
  <key name="cvar.path.user"><path path="user"/></key>

  <key name="lib-dir"><path path="lib"/></key>

  <module type="sglib">
    <key name="name">Dreamless</key>
    <key name="uuid">341c1cb2-abdc-490a-b0aa-115d4c634aa9</key>
    <header-path path="src"/>
    <require module="math"/>
    <group path="src/game">
      <src path="control.cpp"/>
      <src path="control.hpp"/>
      <src path="defs.hpp"/>
      <src path="game_screen.cpp"/>
      <src path="game_screen.hpp"/>
      <src path="level.cpp"/>
      <src path="level.hpp"/>
      <src path="main.cpp"/>
      <src path="screen.cpp"/>
      <src path="screen.hpp"/>
    </group>
    <group path="src/graphics">
      <src path="color.cpp"/>
      <src path="color.hpp"/>
      <src path="common.cpp"/>
      <src path="common.hpp"/>
      <src path="scaler.cpp"/>
      <src path="scaler.hpp"/>
      <src path="shader.cpp"/>
      <src path="shader.hpp"/>
      <src path="sprite.cpp"/>
      <src path="sprite.hpp"/>
      <src path="sprite_array.hpp"/>
      <src path="sprite_enum.hpp"/>
      <src path="sprite_layer.cpp"/>
      <src path="sprite_layer.hpp"/>
      <src path="system.cpp"/>
      <src path="system.hpp"/>
    </group>
    <group path="src/base">
      <src path="array.hpp"/>
      <src path="file.cpp"/>
      <src path="file.hpp"/>
      <src path="image.cpp"/>
      <src path="image.hpp"/>
      <src path="pack.cpp"/>
      <src path="pack.hpp"/>
      <src path="random.cpp"/>
      <src path="random.hpp"/>
      <src path="shader.cpp"/>
      <src path="shader.hpp"/>
      <src path="sprite.hpp"/>
      <src path="sprite_array.cpp"/>
      <src path="sprite_sheet.cpp"/>
      <src path="sprite_orientation.cpp"/>
    </group>
  </module>
</build>
